<% content_for :brand do %>
  <span class="text-lg font-semibold text-gray-900">Service Meaning</span>
<% end %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Service Meaning</h1>
  <p class="mt-1 text-sm text-gray-500">Medallion-pattern meaning service container</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <%= ds_card do %>
    <h3 class="text-sm font-medium text-gray-500 uppercase">Sources</h3>
    <p class="text-2xl font-bold text-primary-600"><%= @sources_count %></p>
  <% end %>
  <%= ds_card do %>
    <h3 class="text-sm font-medium text-gray-500 uppercase">Terms</h3>
    <p class="text-2xl font-bold text-primary-600"><%= @terms_count %></p>
  <% end %>
  <%= ds_card do %>
    <h3 class="text-sm font-medium text-gray-500 uppercase">Transformations</h3>
    <p class="text-2xl font-bold text-primary-600"><%= @transformations_count %></p>
  <% end %>
</div>
